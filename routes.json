{
  "baseUrl": "http://localhost:3000",
  "outDir": "pdf-exports",
  "viewport": {
    "width": 1280,
    "height": 800,
    "deviceScaleFactor": 2
  },
  "waitUntil": "networkidle",
  "waitFor": 500,
  "routes": [
    {
      "path": "/",
      "file": "IndexSlide.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide1",
      "file": "Slide1.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide2",
      "file": "Slide2.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide3",
      "file": "Slide3.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide4",
      "file": "Slide4.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide5",
      "file": "Slide5.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide6",
      "file": "Slide6.pdf",
      "waitForSelector": "#content-ready"
    },
    {
      "path": "/slide7",
      "file": "Slide7.pdf",
      "waitForSelector": "#content-ready"
    }
  ]
}